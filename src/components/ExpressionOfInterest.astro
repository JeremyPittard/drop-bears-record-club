<form action="">
  <p style="font-size: 18px">Sign up below for updates</p>
  <div>
    <label for="email">Email:</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="email address"
      required
    />
  </div>
  <div>
    <label for="artist">Artist</label>
    <input type="radio" id="artist" name="userType" value="artist" required />
    <label for="fan">Fan</label>
    <input type="radio" id="fan" name="userType" value="fan" required />
  </div>

  <button type="submit">Join the club</button>
</form>
